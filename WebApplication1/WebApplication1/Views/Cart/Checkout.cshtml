@model JewelryStore.Models.CheckoutViewModel

@{
    ViewBag.Title = "Оформлення замовлення";
}

<h2>Оформлення замовлення</h2>

@using (Html.BeginForm("CheckoutSuccess", "Cart", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="mb-3">
        @Html.LabelFor(m => m.CustomerName)
        @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", required = "required" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Phone)
        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", required = "required" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Address)
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-success">Підтвердити замовлення</button>
    <a href="@Url.Action("Index", "Cart")" class="btn btn-secondary">Назад до корзини</a>
}
